<Page x:Class="RemotePC8801.PageDirectCommand"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RemotePC8801"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageDirectCommand">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock>Direct Command</TextBlock>
            <ComboBox SelectedIndex="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" x:Name="ComboManualMode">
                <ComboBoxItem>REMOTE</ComboBoxItem>
                <ComboBoxItem>SILENT</ComboBoxItem>
                <ComboBoxItem>LOCAL</ComboBoxItem>
            </ComboBox>

            <TextBox x:Name="TextBoxManualCommand" HorizontalAlignment="Stretch" VerticalAlignment="Top"></TextBox>
            <Button Content="Send" HorizontalAlignment="Stretch" VerticalAlignment="Top" x:Name="ButtonManualSend" Click="ButtonManualSend_Click"></Button>
        </StackPanel>

    </Grid>
</Page>
